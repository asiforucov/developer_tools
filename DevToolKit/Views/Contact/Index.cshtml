@model DevToolKit.Models.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}
<div class="max-w-2xl mx-auto py-12 px-4">
    <div class="text-center mb-8">
        <h1 class="text-4xl font-extrabold text-blue-600 dark:text-blue-400 mb-2">Contact & Tool Suggestion</h1>
        <div class="text-lg text-gray-700 dark:text-gray-300 mb-2">Fill out the form below to contact us or suggest a new tool.</div>
        <div class="text-base text-gray-500 dark:text-gray-400">If you have any questions, feedback, or want to request a developer tool, please describe it in detail. Make sure to enter your email correctly so we can get back to you.</div>
    </div>
    @if (ViewBag.Success == true)
    {
        <div class="mb-6 p-4 rounded bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 text-center font-semibold">Your message was sent successfully! We will contact you soon.</div>
    }
    else if (ViewBag.Error == true)
    {
        <div class="mb-6 p-4 rounded bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200 text-center font-semibold">An error occurred while sending your message. Please try again later.</div>
    }
    <form asp-action="Index" method="post" class="space-y-8 bg-white dark:bg-gray-950 p-10 rounded-2xl shadow-xl border border-gray-100 dark:border-gray-800">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Name" class="block font-semibold mb-2 text-gray-700 dark:text-gray-200">Your Name *</label>
                <input asp-for="Name" class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:bg-gray-800 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-lg" />
                <span asp-validation-for="Name" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            <div>
                <label asp-for="Email" class="block font-semibold mb-2 text-gray-700 dark:text-gray-200">Email *</label>
                <input asp-for="Email" class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:bg-gray-800 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-lg" />
                <span asp-validation-for="Email" class="text-red-600 text-sm mt-1 block"></span>
            </div>
        </div>
        <div>
            <label asp-for="Subject" class="block font-semibold mb-2 text-gray-700 dark:text-gray-200">Subject *</label>
            <input asp-for="Subject" class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:bg-gray-800 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-lg" />
            <span asp-validation-for="Subject" class="text-red-600 text-sm mt-1 block"></span>
        </div>
        <div>
            <label asp-for="Message" class="block font-semibold mb-2 text-gray-700 dark:text-gray-200">Message *</label>
            <textarea asp-for="Message" rows="5" class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:bg-gray-800 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-lg"></textarea>
            <span asp-validation-for="Message" class="text-red-600 text-sm mt-1 block"></span>
        </div>
        <div>
            <label asp-for="ToolSuggestion" class="block font-semibold mb-2 text-gray-700 dark:text-gray-200">Tool you want to suggest (optional)</label>
            <input asp-for="ToolSuggestion" class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:bg-gray-800 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-lg" />
        </div>
        <button type="submit" class="w-full py-3 text-lg bg-gradient-to-r from-blue-600 to-blue-400 hover:from-blue-700 hover:to-blue-500 text-white rounded-xl font-bold shadow-lg transition">Send Message</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 