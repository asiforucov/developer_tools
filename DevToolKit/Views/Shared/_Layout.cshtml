<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Developer Tools</title>
    <meta name="description" content="Free online developer tools: JSON Formatter, Base64 converter, UUID generator, Regex tester and more.">
    <meta name="keywords" content="developer tools, json formatter, base64 to file, regex tester, uuid generator, qr code generator, hash generator, free dev tools">
    <meta name="author" content="Developer Tools">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="canonical" href="https://developertools.codeveria.az/@ViewContext.RouteData.Values["controller"]/@ViewContext.RouteData.Values["action"]" />

    <!-- OpenGraph -->
    <meta property="og:title" content="Developer Tools - Free Online Developer Tools" />
    <meta property="og:description" content="JSON Formatter, Regex Tester, Base64 Converter and other useful tools. All in one place!" />
    <meta property="og:url" content="https://developertools.codeveria.az/" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://developertools.codeveria.az/images/seo-preview.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Developer Tools - Free Online Developer Tools" />
    <meta name="twitter:description" content="Use 20+ developer tools in one place." />
    <meta name="twitter:image" content="https://developertools.codeveria.az/images/seo-preview.png" />
    <script type="text/javascript">
        (function(c,l,a,r,i,t,y){
            c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
            t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
            y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
        })(window, document, "clarity", "script", "sgrpbq6opm");
    </script>
    @{
        var pageTitle = ViewData["Title"] as string ?? "Developer Tools";
        var controller = ViewContext.RouteData.Values["controller"] as string ?? "";
        var url = $"https://developertools.codeveria.az/{controller}";
        var jsonPageTitle = Newtonsoft.Json.JsonConvert.ToString(pageTitle);
        var jsonUrl = Newtonsoft.Json.JsonConvert.ToString(url);
    }
    <script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "WebApplication",
      "name": @Html.Raw(jsonPageTitle),
      "applicationCategory": "DeveloperTool",
      "url": @Html.Raw(jsonUrl),
      "operatingSystem": "All",
      "offers": {
        "@@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      }
    }
    </script>
    <link rel="icon" type="image/svg+xml" href="~/favv.png" />
    <!-- Tailwind CSS CDN (dev only, use npm in prod) -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-HZ50Q3G5B6"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){ dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-HZ50Q3G5B6');
    </script>

</head>
<body class="bg-gray-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100 min-h-screen flex flex-col">
    <!-- Navbar -->
    <nav class="w-full border-b border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
            <div class="flex items-center gap-8">
                <a href="/" class="flex items-center gap-2 text-2xl font-bold tracking-tight text-blue-600 dark:text-blue-400">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="3" y="3" width="18" height="18" rx="4" class="stroke-blue-600 dark:stroke-blue-400"/><path d="M8 8h8M8 12h8M8 16h8" class="stroke-blue-400 dark:stroke-blue-300"/></svg>
                    <span>Developer Tools</span>
                </a>
                <div class="hidden md:flex gap-6">
                    <a href="/" class="hover:text-blue-600 dark:hover:text-blue-400 font-medium">Home</a>
                    <a href="/about" class="hover:text-blue-600 dark:hover:text-blue-400 font-medium">About</a>
                    <a href="/contact" class="hover:text-blue-600 dark:hover:text-blue-400 font-medium">Contact</a>
                </div>
            </div>
            <div class="flex items-center gap-4">
                <button id="theme-toggle" aria-label="Toggle dark mode" class="p-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800 transition">
                    <svg id="theme-toggle-light-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m8.66-13.66l-.71.71M4.05 19.95l-.71.71M21 12h-1M4 12H3m16.66 5.66l-.71-.71M4.05 4.05l-.71-.71M16 12a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
                    <svg id="theme-toggle-dark-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M21 12.79A9 9 0 1111.21 3a7 7 0 109.79 9.79z"/></svg>
                </button>
            </div>
        </div>
        <!-- Mobile nav -->
        <div class="md:hidden px-4 pb-2 flex gap-4">
            <a href="/" class="hover:text-blue-600 dark:hover:text-blue-400 font-medium">Home</a>
            <a href="#" class="hover:text-blue-600 dark:hover:text-blue-400 font-medium">All Tools</a>
            <a href="/about" class="hover:text-blue-600 dark:hover:text-blue-400 font-medium">About</a>
            <a href="/contact" class="hover:text-blue-600 dark:hover:text-blue-400 font-medium">Contact</a>
        </div>
    </nav>
    <div class="flex flex-1 w-full min-h-0">
        <!-- Sidebar -->
        <aside class="w-64 shrink-0 h-[calc(100vh-64px)] sticky top-16 bg-gray-50 dark:bg-gray-900 border-r border-gray-200 dark:border-gray-800 overflow-y-auto flex flex-col py-4">
            <div class="flex flex-col gap-1 px-2">
                @{
                    var currentPath = Context.Request.Path.Value?.ToLowerInvariant() ?? "";
                    var tools = new[] {
                        new { Href = "/tools/json-formatter", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path d='M6 4v16M18 4v16M9 8h6M9 12h6M9 16h6' /></svg>", Name = "JSON Formatter" },
                        new { Href = "/tools/xml-formatter", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path d='M7 7l-4 5 4 5M17 7l4 5-4 5M12 4v16' /></svg>", Name = "XML Formatter" },
                        new { Href = "/tools/sql-formatter", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><ellipse cx='12' cy='7' rx='8' ry='3'/><path d='M4 7v10c0 1.66 3.58 3 8 3s8-1.34 8-3V7' /></svg>", Name = "SQL Formatter" },
                        new { Href = "/tools/text-diff", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path d='M8 7h13M8 12h13M8 17h13M3 7l3 3-3 3' /></svg>", Name = "Text Diff" },
                        new { Href = "/tools/uuid-generator", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='4' y='4' width='16' height='16' rx='4'/><path d='M8 8h.01M16 8h.01M8 16h.01M16 16h.01' /></svg>", Name = "UUID Generator" },
                        new { Href = "/tools/base64-to-file", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path d='M12 4v16m0 0l-4-4m4 4l4-4M4 4h16v4H4z' /></svg>", Name = "Base64 to File" },
                        new { Href = "/tools/file-to-base64", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path d='M12 20V4m0 0l4 4m-4-4L8 8M20 20H4v-4h16z' /></svg>", Name = "File to Base64" },
                        new { Href = "/tools/text-to-hex", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><polygon points='12 2 2 7 12 12 22 7 12 2'/><path d='M2 17l10 5 10-5' /></svg>", Name = "Text to Hex" },
                        new { Href = "/tools/random-string-generator", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path d='M4 4l16 16M4 20L20 4' /></svg>", Name = "Random String" },
                        new { Href = "/tools/password-generator", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='3' y='11' width='18' height='8' rx='4'/><path d='M7 11V7a5 5 0 0110 0v4' /></svg>", Name = "Password Generator" },
                        new { Href = "/tools/lorem-ipsum-generator", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='4' y='4' width='16' height='16' rx='2'/><path d='M8 8h8M8 12h4' /></svg>", Name = "Lorem Ipsum" },
                        new { Href = "/tools/url-encoder-decoder", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path d='M7 7l10 10M7 17L17 7' /><circle cx='7' cy='7' r='2'/><circle cx='17' cy='17' r='2'/></svg>", Name = "URL Encoder/Decoder" },
                        new { Href = "/tools/hash-generator", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><text x='4' y='20' font-size='20'>#</text></svg>", Name = "Hash Generator" },
                        new { Href = "/tools/slug-generator", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path d='M4 12h16M4 16h16M4 8h10' /></svg>", Name = "Slug Generator" },
                        new { Href = "/tools/case-converter", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><text x='2' y='19' font-size='16'>Aa</text></svg>", Name = "Case Converter" },
                        new { Href = "/tools/color-picker", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><circle cx='12' cy='12' r='8'/><circle cx='12' cy='12' r='4'/></svg>", Name = "Color Picker" },
                        new { Href = "/tools/qr-code-generator", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='3' y='3' width='6' height='6'/><rect x='15' y='3' width='6' height='6'/><rect x='3' y='15' width='6' height='6'/><path d='M15 15h2v2h-2zM19 19h2v2h-2zM15 19h2v2h-2z' /></svg>", Name = "QR Code Generator" },
                        new { Href = "/tools/jwt-decoder", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><circle cx='12' cy='12' r='10'/><path d='M8 12h8M12 8v8' /></svg>", Name = "JWT Decoder" },
                        new { Href = "/tools/xml-json-converter", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path d='M8 12h8M8 8h8M8 16h8M4 12l4-4m0 8l-4-4' /></svg>", Name = "XML↔JSON Converter" },
                        new { Href = "/tools/regex-tester", Icon = "<svg class='w-5 h-5 mr-2' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><circle cx='12' cy='12' r='9'/><path d='M8 12h8M12 8v8' /><text x='16' y='20' font-size='10'>.*</text></svg>", Name = "Regex Tester" }
                    };
                }
                @foreach (var tool in tools)
                {
                    var isActive = currentPath == tool.Href.ToLowerInvariant();
                    <a href="@tool.Href" class="flex items-center px-3 py-2 rounded transition font-medium whitespace-nowrap @(isActive ? "bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300" : "hover:bg-blue-100 dark:hover:bg-blue-900 hover:text-blue-700 dark:hover:text-blue-300 text-gray-700 dark:text-gray-200")">
                        @Html.Raw(tool.Icon) @tool.Name
                    </a>
                }
            </div>
        </aside>
        <!-- Main Content -->
        <main class="flex-1 min-w-0 pb-12">
            <div class="pt-2 pb-8 px-0 sm:px-4">
                @RenderBody()
            </div>
        </main>
    </div>
    <!-- Footer -->
    <footer class="mt-auto w-full border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950 py-4">
        <div class="max-w-7xl mx-auto px-4 text-center text-sm text-gray-500 dark:text-gray-400">
            © 2025 Developer Tools. Built by developers for developers.
        </div>
    </footer>
    <script src="/js/theme-toggle.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>