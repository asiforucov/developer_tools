@model DevToolKit.Models.XmlFormatterViewModel
@{
    ViewData["Title"] = "XML Formatter";
}
<script>
    function logToolUsage(toolName) {
        gtag('event', 'tool_used', {
            'event_category': 'Tool',
            'event_label': toolName
        });
    }
</script>
<div class="max-w-3xl mx-auto py-8">
    <h1 class="text-2xl font-bold mb-4">XML Formatter</h1>
    <form method="post" class="space-y-4">
        <textarea name="Input" rows="8" class="w-full rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100 focus:ring-blue-500 focus:border-blue-500" placeholder="Paste your XML here...">@Model?.Input</textarea>
        <button onclick="logToolUsage('XML Formatter')" type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Format</button>
    </form>
    @if (Model?.Output != null)
    {
        <div class="mt-8">
            <div class="flex items-center justify-between mb-1">
                <label class="font-semibold text-lg">Formatted XML</label>
                <button type="button" onclick="navigator.clipboard.writeText(document.getElementById('xml-output').value)" class="text-xs px-2 py-1 bg-gray-200 dark:bg-gray-700 rounded hover:bg-blue-100 dark:hover:bg-blue-900">Copy</button>
            </div>
            <textarea id="xml-output" rows="16" class="w-full rounded-lg border-2 border-blue-300 dark:border-blue-700 bg-gray-100 dark:bg-gray-900 dark:text-gray-100 font-mono text-base p-4" readonly>@Model.Output</textarea>
            @if (Model.Output.StartsWith("Invalid XML"))
            {
                <div class="text-red-600 mt-2">@Model.Output</div>
            }
        </div>
    }
</div> 