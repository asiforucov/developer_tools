@model DevToolKit.Models.UrlEncoderDecoderViewModel
@{
    ViewData["Title"] = "URL Encoder/Decoder";
}
<div class="max-w-2xl mx-auto py-8">
    <h1 class="text-2xl font-bold mb-4">URL Encoder/Decoder</h1>
    <form method="post" class="space-y-4">
        <textarea name="Input" rows="4" class="w-full rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100 focus:ring-blue-500 focus:border-blue-500" placeholder="Enter text to encode or decode...">@Model?.Input</textarea>
        <div class="flex gap-4 items-center">
            <label><input type="radio" name="Mode" value="encode" @(Model?.Mode == "encode" ? "checked" : null) /> Encode</label>
            <label><input type="radio" name="Mode" value="decode" @(Model?.Mode == "decode" ? "checked" : null) /> Decode</label>
        </div>
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Process</button>
    </form>
    @if (!string.IsNullOrEmpty(Model?.Output))
    {
        <div class="mt-6">
            <div class="flex items-center justify-between mb-1">
                <label class="font-semibold">Result</label>
                <button type="button" onclick="navigator.clipboard.writeText(document.getElementById('url-output').value)" class="text-xs px-2 py-1 bg-gray-200 dark:bg-gray-700 rounded hover:bg-blue-100 dark:hover:bg-blue-900">Copy</button>
            </div>
            <textarea id="url-output" rows="4" class="w-full rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100" readonly>@Model.Output</textarea>
        </div>
    }
</div> 