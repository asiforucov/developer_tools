@model DevToolKit.Models.ColorPickerViewModel
@{
    ViewData["Title"] = "Color Picker";
    var colorValue = Model?.Color ?? "#3498db";
}
<script>
    function logToolUsage(toolName) {
        gtag('event', 'tool_used', {
            'event_category': 'Tool',
            'event_label': toolName
        });
    }
</script>
<div class="max-w-md mx-auto py-8">
    <h1 class="text-2xl font-bold mb-4">Color Picker</h1>
    <form method="post" class="space-y-4 flex flex-col items-start">
        <input type="color" name="Color" value="@colorValue" class="w-16 h-16 p-0 border-0 rounded shadow" />
        <button onclick="logToolUsage('Color Picker')" type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Pick Color</button>
    </form>
    @if (!string.IsNullOrEmpty(Model?.Color))
    {
        <div class="mt-6 flex items-center gap-4">
            <div class="w-12 h-12 rounded shadow" style="background:@Model.Color"></div>
            <div class="flex items-center gap-2">
                <input id="color-output" type="text" readonly class="w-32 rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100" value="@Model.Color" />
                <button type="button" onclick="navigator.clipboard.writeText(document.getElementById('color-output').value)" class="text-xs px-2 py-1 bg-gray-200 dark:bg-gray-700 rounded hover:bg-blue-100 dark:hover:bg-blue-900">Copy</button>
            </div>
        </div>
    }
</div> 