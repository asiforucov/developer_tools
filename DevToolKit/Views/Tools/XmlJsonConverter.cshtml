@model DevToolKit.Models.XmlJsonConverterViewModel
@{
    ViewData["Title"] = "XML ↔ JSON Converter";
}
<script>
    function logToolUsage(toolName) {
        gtag('event', 'tool_used', {
            'event_category': 'Tool',
            'event_label': toolName
        });
    }
</script>
<div class="max-w-2xl mx-auto py-8">
    <h1 class="text-2xl font-bold mb-4">XML ↔ JSON Converter</h1>
    <form method="post" class="space-y-4">
        <textarea name="Input" rows="8" class="w-full rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100 focus:ring-blue-500 focus:border-blue-500" placeholder="Paste XML or JSON here...">@Model?.Input</textarea>
        <div class="flex gap-4 items-center">
            <label><input type="radio" name="Mode" value="xml2json" @(Model?.Mode == "xml2json" ? "checked" : null) /> XML → JSON</label>
            <label><input type="radio" name="Mode" value="json2xml" @(Model?.Mode == "json2xml" ? "checked" : null) /> JSON → XML</label>
        </div>
        <button onclick="logToolUsage('XML JSON Converter')" type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Convert</button>
    </form>
    @if (!string.IsNullOrEmpty(Model?.Error))
    {
        <div class="text-red-600 mt-4">@Model.Error</div>
    }
    @if (!string.IsNullOrEmpty(Model?.Output))
    {
        <div class="mt-6">
            <div class="flex items-center justify-between mb-1">
                <label class="font-semibold">Result</label>
                <button type="button" onclick="navigator.clipboard.writeText(document.getElementById('xmljson-output').value)" class="text-xs px-2 py-1 bg-gray-200 dark:bg-gray-700 rounded hover:bg-blue-100 dark:hover:bg-blue-900">Copy</button>
            </div>
            <textarea id="xmljson-output" rows="12" class="w-full rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100 font-mono" readonly>@Model.Output</textarea>
        </div>
    }
</div> 