@model DevToolKit.Models.RegexTesterViewModel
@{
    ViewData["Title"] = "Regex Tester";
}
<script>
    function logToolUsage(toolName) {
        gtag('event', 'tool_used', {
            'event_category': 'Tool',
            'event_label': toolName
        });
    }
</script>
<div class="max-w-2xl mx-auto py-8">
    <h1 class="text-2xl font-bold mb-4">Regex Tester</h1>
    <form method="post" class="space-y-4">
        <input type="text" name="Pattern" class="w-full rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100" placeholder="Regex pattern..." value="@Model?.Pattern" />
        <textarea name="TestString" rows="6" class="w-full rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100" placeholder="Test string...">@Model?.TestString</textarea>
        <button onclick="logToolUsage('Regex Tester')" type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Test</button>
    </form>
    @if (!string.IsNullOrEmpty(Model?.Error))
    {
        <div class="text-red-600 mt-4">@Model.Error</div>
    }
    @if (Model?.Matches != null && Model.Matches.Count > 0)
    {
        <div class="mt-6">
            <div class="flex items-center justify-between mb-1">
                <label class="font-semibold">Matches</label>
                <button type="button" onclick="navigator.clipboard.writeText(document.getElementById('regex-matches').value)" class="text-xs px-2 py-1 bg-gray-200 dark:bg-gray-700 rounded hover:bg-blue-100 dark:hover:bg-blue-900">Copy</button>
            </div>
            <textarea id="regex-matches" rows="6" class="w-full rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100 font-mono" readonly>@string.Join("\n", Model.Matches)</textarea>
        </div>
    }
    @if (Model?.Groups != null && Model.Groups.Count > 0)
    {
        <div class="mt-4">
            <label class="font-semibold">Groups</label>
            <ul class="list-disc pl-6 text-gray-700 dark:text-gray-300">
                @foreach (var g in Model.Groups)
                {
                    <li>@g</li>
                }
            </ul>
        </div>
    }
</div> 