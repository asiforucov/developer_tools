@model DevToolKit.Models.TextToHexViewModel
@{
    ViewData["Title"] = "Text to Hex";
}
<div class="max-w-xl mx-auto py-8">
    <h1 class="text-2xl font-bold mb-4">Text to Hex</h1>
    <form method="post" class="space-y-4">
        <input type="text" name="Input" class="w-full rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100" placeholder="Enter text..." value="@Model?.Input" />
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Convert</button>
    </form>
    @if (!string.IsNullOrEmpty(Model?.Hex))
    {
        <div class="mt-6">
            <div class="flex items-center justify-between mb-1">
                <label class="font-semibold">Hex Output</label>
                <button type="button" onclick="navigator.clipboard.writeText(document.getElementById('hex-output').value)" class="text-xs px-2 py-1 bg-gray-200 dark:bg-gray-700 rounded hover:bg-blue-100 dark:hover:bg-blue-900">Copy</button>
            </div>
            <input id="hex-output" type="text" readonly class="w-full rounded border-gray-300 dark:bg-gray-800 dark:text-gray-100" value="@Model.Hex" />
        </div>
    }
</div> 